<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape with Gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/Ash_trans"
                android:endColor="@color/Ash_trans"
                android:angle="0" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Border Shape -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
            android:color="@color/Greenish_trans" /> <!-- Border color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
